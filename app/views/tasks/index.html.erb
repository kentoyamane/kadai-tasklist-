<h1>タスク一覧</h1>

<% @task.any? %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>ステイタス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>

<% @task.each do |task| %>
     
    <tr>
      <td>
<%= link_to task.id, task %>
</td>
      <td>
<%= task.status %>
</td>
      <td>
<%= task.content %>
</td>

    </tr>


    </tbody>
  </table>
  <div>
  </div>
  
<%= paginate @task %>
  
  </div>
<% end %>


<%= link_to '新規課題の投稿', new_task_path, class: "btn btn-primary" %>