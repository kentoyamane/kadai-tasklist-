<%= form_for(tasklist) do |f| %>

  
<% if tasklist.errors.any? %>

    <div id="error_explanation">
      <ul>
        
<% tasklist.errors.full_messages.each do |message| %>

          <li>
<%= message %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>


<%= f.label :status, 'ステイタス' %>

  
<%= f.text_field :status %>


<%= f.label :content, 'タスク' %>

  
<%= f.text_field :content %>


  
<%= f.submit '投稿' %>

<% end %>